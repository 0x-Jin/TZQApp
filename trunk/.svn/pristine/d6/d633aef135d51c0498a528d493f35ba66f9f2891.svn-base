<ion-view view-title="账户信息" class="app-account-setting-info-view">

  <!--头部和回退按钮、保存按钮-->
  <ion-nav-bar class="app-common-header">

    <ion-nav-buttons side="left">
      <a class="button button-icon icon icon-back" ng-click="goBack()">
      </a>
    </ion-nav-buttons>

    <ion-nav-buttons side="right">
      <a class="button button-small positive-bg" style="border: none; padding: 0px 10px; font-size: 15px;">
        <span>保存</span>
      </a>
    </ion-nav-buttons>

  </ion-nav-bar>

  <ion-content class="app-account-setting-info-body" has-header="false">

    <div>&nbsp;</div>

    <div class="item item-borderless itemPadding item_border_bottom" ng-click="changeImg()">
      <img class="myImg" ng-src="img/temp/team_img1.jpg">
      <div class="arrow_right">
        <span>修改头像</span>&nbsp;
        <i class="icon ion-ios-arrow-right icon-size" style="line-height: 50px"></i>
      </div>
    </div>

    <div class="item item-borderless itemPadding item_border_bottom" href="#">
      昵称
      <div class="arrow_right">
        <span>Raech</span>&nbsp;
        <i class="icon ion-ios-arrow-right icon-size"></i>
      </div>
    </div>

    <div class="item item-borderless itemPadding"  style="margin-bottom: 4%">
      注册手机号
      <div class="arrow_right">
        <span>15625000000</span>&nbsp;
      </div>
    </div>


    <a class="item item-borderless itemPadding item_border_bottom" href="#/login/inputPsw/0">
      修改登录密码
      <i class="icon ion-ios-arrow-right icon-size arrow_right"></i>
    </a>
    <a class="item item-borderless itemPadding item_border_bottom"  href="#/login/inputPsw/1">
      修改交易密码
      <i class="icon ion-ios-arrow-right icon-size arrow_right"></i>
    </a>
    <a class="item item-borderless itemPadding" ng-click="logout()">
      退出登录
      <i class="icon ion-ios-arrow-right icon-size arrow_right"></i>
    </a>

  </ion-content>

</ion-view>
