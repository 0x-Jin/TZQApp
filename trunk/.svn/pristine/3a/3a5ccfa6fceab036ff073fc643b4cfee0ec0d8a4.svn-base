  .controller('ForgetPswController', function($scope, $location, $stateParams, $ionicHistory, $interval, testService) {
    $scope.my = { phoneNum:'', isChecked:false, vCode:'', vCodeChecked:true, timeup:true, countdown:"验证码" }

