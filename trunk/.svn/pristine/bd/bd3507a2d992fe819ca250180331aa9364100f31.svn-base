<ion-view view-title="我的投知圈" class="app-team-index-quit-view">

  <!--头部和回退按钮-->
  <ion-nav-bar class="app-common-header">

    <ion-nav-buttons side="left">
      <a class="button button-icon icon icon-back" ng-click="goBack()"></a>
    </ion-nav-buttons>

    <ion-nav-buttons side="right">
      <a class="button button-icon icon icon-more"></a>
    </ion-nav-buttons>

  </ion-nav-bar>

  <ion-content class="app-team-index-quit-body" has-header="false">

    <div class="box">

      <div class="list list-borderless">

        <label class="item item-radio">
          <input type="radio" name="group" value="go">
          <i class="radio-icon ion-checkmark"></i>
          <div class="item-content">
            <i class="icon ion-android-checkbox-outline-blank"></i>
            <span>个人原因</span>
          </div>
        </label>

        <label class="item item-radio">
          <input type="radio" name="group" value="python"  checked="checked">
          <i class="radio-icon ion-checkmark"></i>
          <div class="item-content">
            <i class="icon ion-android-checkbox-outline-blank"></i>
            <span ng-show="my.isLeader">创建另一支战队</span>
            <span ng-show="!my.isLeader">加入别的投知圈</span>
          </div>
        </label>

        <label class="item item-radio">
          <input type="radio" name="group" value="python">
          <i class="radio-icon ion-checkmark"></i>
          <div class="item-content">
            <i class="icon ion-android-checkbox-outline-blank"></i>
            <span>其他原因</span>
          </div>
        </label>


      </div>

      <div style="background-color: #fcd953; text-align: center; font-size: 20px; padding: 3%;">退出群组</div>
    </div>

  </ion-content>

</ion-view>
